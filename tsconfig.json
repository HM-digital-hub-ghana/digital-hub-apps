{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "module": "ESNext",
    "baseUrl": ".",
    "ignoreDeprecations": "6.0",
    "paths": {
      "src/*": ["src/*"],
      "@/*": ["./*"],
      "@web/*": ["src/web/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
